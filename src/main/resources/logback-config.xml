<?xml version="1.0" encoding="UTF-8" ?>
<configuration scan="true" scanPeriod="60 seconds">
    <include resource="org/springframework/boot/logging/logback/base.xml"/>

    <appender name="FILE_APPENDER" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>C:/Users/U760596/Desktop/logs/log_file.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>C:/Users/U760596/Desktop/log_file.%d.log.gz</fileNamePattern>
            <!-- keep 30 days' worth of history capped at 3GB total size -->
            <maxHistory>30</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>
        <encoder>
            <pattern>%date - %-5level - [%thread] %c{2} - %message%n</pattern>
        </encoder>
    </appender>

    <root level="WARN"/>
    <logger name="lhind.flights.booking" level="INFO">
        <appender-ref ref="FILE_APPENDER"/>
    </logger>

    <logger name="org.springframework" level="INFO">
        <appender-ref ref="FILE_APPENDER"/>
    </logger>

</configuration>